#!/usr/bin/env bash

# shellcheck disable=SC1090,SC2143

source "$CLI_DIR/tc/framework/functions"

while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    --db-master-name)
    DB_MASTER_NAME="$2"
    shift 2
    ;;
    *)
    ;;
esac
done

function get_db_identifier() {
  __db_master_name=$1
  if [[ -z $( echo "$__db_master_name" | grep ".*\.amazonaws.com" ) ]]; then
    __output="$( dig cname "$__db_master_name" +short )"
    _error_code=$?
    __MSG="Command: tcctl aws $1 get_db_identifier"
    __MSG+="$__output"
    if [[ "$_error_code" -eq "0" ]]; then
      echo "$__output" | awk -F '.' '{print $1}'
    else
      _message "$__MSG" "error" "$_error_code"
    fi
  fi
}

if [ -z "$DB_MASTER_NAME" ]; then
  __MSG="Command: tcctl aws get_db_identifier missed --db-master-name"
  _message "$__MSG" "error" "$_error_code"
else
  get_db_identifier "$DB_MASTER_NAME"
fi
