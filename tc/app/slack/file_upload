#!/usr/bin/env bash

# shellcheck disable=SC1090

source "$CLI_DIR/tc/framework/functions"

CHANNEL="#devops-notifications"

while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    --channel)
    CHANNEL="$2"
    shift 2
    ;;
    --site-version)
    SITE_VERSION="$2"
    shift 2
    ;;
    --file)
    FILE="$2"
    shift 2
    ;;
    *)
    ;;
esac
done

function slack_file_upload() {
    SLACK_MESSAGE="Changes in version $2 on :host: $(hostname)"
    __output=$( slack file upload "$3" "$1" --comment "$SLACK_MESSAGE" )
    _error_code=$?
    __MSG="Command: tcctl slack file_upload"
    __MSG+="$__output"
    if [[ "$_error_code" -eq "0" ]]; then
      _message "Message was send into Slack $CHANNEL"
    else
      _message "$__MSG" "warning"
    fi
}

slack_file_upload "$CHANNEL" "$SITE_VERSION" "$FILE"
