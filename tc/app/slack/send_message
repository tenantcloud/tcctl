#!/usr/bin/env bash

# shellcheck disable=SC1090

source "$CLI_DIR/tc/framework/functions"

CHANNEL="#devops-notifications"
MESSAGE="Please, check your Slack message formation"

while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    --channel)
    CHANNEL="$2"
    shift 2
    ;;
    --message)
    MESSAGE="$2"
    shift 2
    ;;
    --color)
    COLOR="$2"
    shift 2
    ;;
    *)
    ;;
esac
done

function slack_send_message() {
    _slack_message="$1"
    _slack_color="$3"
    _slack_channel="$2"
    if [[ -n $_slack_color ]]; then
      _slack_color="-cl \"$_slack_color\""
    fi
    _slack_command="$(command -v slack) chat send $_slack_color "\"$_slack_message\"" "\"$_slack_channel\"""
    __output=$( eval "$_slack_command" )
    _error_code=$?
    __MSG="Command: tcctl slack update_finish"
    __MSG+="$__output"
    if [[ "$_error_code" -eq "0" ]]; then
      _message "Message was send into Slack $CHANNEL"
    else
      _message "$__MSG" "error" "$_error_code"
    fi
}

slack_send_message "$MESSAGE" "$CHANNEL" "$COLOR"
