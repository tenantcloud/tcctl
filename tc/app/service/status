#!/usr/bin/env bash

source "$CLI_DIR/tc/framework/functions"

function status_service() {
  SERVICE_NAME=$1
  OS=$( _get_os )
  if [[ $OS == Linux ]]; then
    echo $( systemctl is-active $SERVICE_NAME | column -t )
  elif [[ $OS == Darwin ]]; then
    echo $( $SERVICE_NAME status | awk '{ print $2 }' )
  fi
}

status_service $1
