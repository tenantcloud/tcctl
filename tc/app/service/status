#!/usr/bin/env bash

# shellcheck disable=SC1090

source "$CLI_DIR/tc/framework/functions"

while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    --service-name)
    SERVICE_NAME="$2"
    shift 2
    ;;
    *)
    ;;
esac
done

function status_service() {
  __service_name=$1
  if [[ $( _get_os ) == Linux ]]; then
    __output=$( systemctl is-active "$__service_name" )
    _error_code=$?
    __MSG="Command: tcctl service $1 status"
    __MSG+="$__output"
    if [[ "$_error_code" -eq "0" ]]; then
      systemctl is-active "$__service_name" | column -t
    else
      _message "$__MSG" "error" "$_error_code"
    fi
  elif [[ $( _get_os ) == Darwin ]]; then
    __output=$( $__service_name status )
    _error_code=$?
    __MSG="Command: tcctl service $1 status"
    __MSG+="$__output"
    if [[ "$_error_code" -eq "0" ]]; then
      $__service_name status | awk '{ print $2 }'
    else
      _message "$__MSG" "error" "$_error_code"
    fi
  fi
}

if [ -z "$SERVICE_NAME" ]; then
  __MSG="Command: Command: tcctl service status missed --service-name"
  _message "$__MSG" "error" "$_error_code"
else
  status_service "$SERVICE_NAME"
fi
