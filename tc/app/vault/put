#!/usr/bin/env bash

source "$CLI_DIR/tc/framework/functions"

function vault_put() {
  tcctl helpers check_bin_file vault
  tcctl vault token
  VAULT_SECRETS=$1
  ENV_FILE=$2
  __output=$( vault kv put $VAULT_SECRETS $(egrep -v '^#' $ENV_FILE) 2>&1 )
  export _error_code=$?
  __MSG="Command: \033[36mtcctl vault put $@\033[39m\n"
  __MSG+="$__output"
  if [ $_error_code -eq "0" ]; then
    _vault_kv_put=$( echo $__output | xargs )
  else
    _message_error "$__MSG"
  fi
}

vault_put $1 $2
