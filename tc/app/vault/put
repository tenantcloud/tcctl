#!/usr/bin/env bash

# shellcheck source="$CLI_DIR/tc/framework/functions"
# shellcheck source="$CLI_DIR/tc/app/aws/functions"
# shellcheck disable=SC2196,SC2046,SC2124,SC2034

source "$CLI_DIR/tc/framework/functions"

set +e

while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    --secret-project)
    SECRET_PROJECT="$2"
    shift 2
    ;;
    --env)
    ENV="$2"
    shift 2
    ;;
    *)
    ;;
esac
done

function vault_put() {
  tcctl helpers check_bin_file vault
  tcctl vault token
  VAULT_SECRETS=$1
  ENV_FILE=$2
  __output=$( vault kv put "$VAULT_SECRETS" $(egrep -v '^#' "$ENV_FILE") 2>&1 )
  export _error_code=$?
  __MSG="Command: \033[36mtcctl vault put $@\033[39m\n"
  __MSG+="$__output"
  if [ $_error_code -eq "0" ]; then
    _vault_kv_put=$( echo "$__output" | xargs )
  else
    _message "$__MSG" "error" "$_error_code"
  fi
}

vault_put "$SECRET_PROJECT" "$ENV"
