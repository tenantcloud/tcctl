#!/usr/bin/env bash

# shellcheck disable=SC2196,SC2046,SC2124,SC2034,SC1090

source "$CLI_DIR/tc/framework/functions"

while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    --secret-path)
    SECRET_PATH="$2"
    shift 2
    ;;
    --param-env)
    PARAM_ENV="$2"
    shift 2
    ;;
    *)
    ;;
esac
done

function vault_put() {
  tcctl helpers check_bin_file --filename vault
  tcctl vault token
  SECRET_PATH=$1
  PARAM_ENV=$2
  __output=$( vault kv put "$SECRET_PATH" $(egrep -v '^#' "$PARAM_ENV") 2>&1 )
  _error_code=$?
  __MSG="Command: tcctl vault put $@"
  __MSG+="$__output"
  if [ $_error_code -eq "0" ]; then
    _vault_kv_put=$( echo "$__output" | xargs )
  else
    _message "$__MSG" "error" "$_error_code"
  fi
}

if [ -z "$SECRET_PATH" ]; then
  __MSG="Command: tcctl vault put missed --secret-path"
  _message_error "$__MSG"
elif [ -z "$PARAM_ENV" ]; then
  __MSG="Command: tcctl vault put missed --param-env"
  _message "$__MSG" "error" "$_error_code"
else
  vault_put "$SECRET_PATH" "$PARAM_ENV"
fi
