#!/usr/bin/env bash

# shellcheck disable=SC2124,SC1090

source "$CLI_DIR/tc/framework/functions"
source "$CLI_DIR/tc/app/helpers/functions"

while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    --env-1)
    ENV1="$2"
    shift 2
    ;;
    --env-2)
    ENV2="$2"
    shift 2
    ;;
    *)
    ;;
esac
done

function vault_diff() {
  _check_bin_file vault
  __env1=$1
  __env2=$2
  __output=$( diff -y --suppress-common-lines "$__env1" "$__env2" )
  _error_code=$?
  __MSG="Command: tcctl vault diff $@ "
  __MSG+="$__output"
  if [[ "$_error_code" -eq "0" ]]; then
    echo "$__output" | column -t
  else
    _message "$__MSG" "error" "$_error_code"
  fi
}

if [ -z "$ENV1" ]; then
  __MSG="Command: tcctl vault diff missed --env-1"
  _message "$__MSG" "error" "$_error_code"
elif [ -z "$ENV2" ]; then
  __MSG="Command: tcctl vault diff missed --env-2"
  _message "$__MSG" "error" "$_error_code"
else
  vault_diff "$ENV1" "$ENV2"
fi
