#!/usr/bin/env bash

source "$CLI_DIR/tc/framework/functions"

function vault_diff() {
  ENV_FILE=$1
  ENV_TEMP=$2
  __output=$( diff -y --suppress-common-lines $ENV_FILE $ENV_TEMP )
  export _error_code=$?
  __MSG="Command: \033[36mtcctl vault diff $@\033[39m\n"
  __MSG+="$__output"
  if [[ $_error_code -eq "0" ]]; then
    echo "$__output" | column -t
  else
    _message_error "$__MSG"
  fi
}

vault_diff $1 $2
