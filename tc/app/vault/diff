#!/usr/bin/env bash

# shellcheck source="$CLI_DIR/tc/framework/functions"
# shellcheck source="$CLI_DIR/tc/app/aws/functions"
# shellcheck disable=SC2124

source "$CLI_DIR/tc/framework/functions"

set +e

while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    --env-1)
    ENV1="$2"
    shift 2
    ;;
    --env-2)
    ENV2="$2"
    shift 2
    ;;
    *)
    ;;
esac
done

function vault_diff() {
  tcctl helpers check_bin_file vault
  ENV1=$1
  ENV2=$2
  __output=$( diff -y --suppress-common-lines "$ENV1" "$ENV2" )
  export _error_code=$?
  __MSG="Command: tcctl vault diff $@"
  __MSG+="$__output"
  if [[ $_error_code -eq "0" ]]; then
    echo "$__output" | column -t
  else
    _message "$__MSG" "error" "$_error_code"
  fi
}

if [ -z "$ENV1" ]; then
  __MSG="Command: tcctl vault diff missed --env-1"
  _message "$__MSG" "error" "$_error_code"
elif [ -z "$ENV2" ]; then
  __MSG="Command: tcctl vault diff missed --env-2"
  _message "$__MSG" "error" "$_error_code"
else
  vault_diff "$ENV1" "$ENV2"
fi
