#!/usr/bin/env bash

# shellcheck disable=SC2124,SC2034,SC1090

source "$CLI_DIR/tc/framework/functions"

while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    --secret-path)
    SECRET_PATH="$2"
    shift 2
    ;;
    *)
    ;;
esac
done

function vault_check_path() {
  tcctl helpers check_bin_file --filename vault
  VAULT_TOKEN=$(tcctl vault token)
  SECRET_PATH="$1"
  __output=$( vault kv get "$SECRET_PATH" 2>&1 )
  _error_code=$?
  __MSG="Command: tcctl vault path $@"
  __MSG+="$__output"
  if [ $_error_code -eq "0" ]; then
    echo "true"
  else
    echo "false"
  fi
}

if [ -z "$SECRET_PATH" ]; then
  __MSG="Command: tcctl vault path missed --secret-path"
  _message "$__MSG" "error" "$_error_code"
else
  vault_check_path "$SECRET_PATH"
fi
