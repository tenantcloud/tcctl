#!/usr/bin/env bash

# shellcheck disable=SC2124,SC1091,SC2119

source "$CLI_DIR/tc/framework/functions"
source "$CLI_DIR/tc/app/vault/functions"
source "$CLI_DIR/tc/app/helpers/functions"

while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    --secret-path)
    SECRET_PATH="$2"
    shift 2
    ;;
    *)
    ;;
esac
done

function _vault_check_path() {
  _check_bin_file vault
  VAULT_TOKEN=$(_vault_get_token)
  export VAULT_TOKEN
  __secret_path="$1"
  vault kv get "$__secret_path" 2>&1
  _error_code=$?
  if [ "$_error_code" -eq "0" ]; then
    echo "true"
  else
    echo "false"
  fi
}

if [ -z "$SECRET_PATH" ]; then
  __MSG="Command: tcctl vault path missed --secret-path"
  _message "$__MSG" "error" "$_error_code"
else
  _vault_check_path "$SECRET_PATH"
fi
