#!/usr/bin/env bash

source "$CLI_DIR/tc/framework/functions"

function vault_check_path() {
  tcctl vault token
  VAULT_SECRET_PATH=$1
  __output=$( vault kv get $VAULT_SECRET_PATH )
  export _error_code=$?
  __MSG="Command: \033[36mtcctl vault path $@\033[39m\n"
  __MSG+="$__output"
  if [ $_error_code -eq "0" ]; then
      echo $__output | sed 1,8d | head -1
  else
      message_error "$__MSG"
  fi
}

vault_check_path $1
