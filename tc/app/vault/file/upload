#!/usr/bin/env bash

# shellcheck disable=SC1091

source "$CLI_DIR/tc/framework/functions"
source "$CLI_DIR/tc/app/vault/functions"
source "$CLI_DIR/tc/app/helpers/functions"

auth_type=
secret_path=
file=
vault_token=
vault_name=
vault_pass=
vault_address=

while echo "$1" | grep -q ^--; do
  __key=${1//--/}
  __key=${__key//-/_}
  if [[ -n "$2" ]]; then
    eval "${__key}"='$2'
    shift 2
  else
    set "${__key}"
    shift
  fi
done

_check_bin_file vault
if [[ "$auth_type" = "userpass" ]]; then
  _vault_authorization "$auth_type" "$vault_name" "$vault_pass" "$vault_address"
elif [[ "$auth_type" = "token" ]]; then
  _vault_authorization "$auth_type" "$vault_token" "$vault_address"
else
  _vault_authorization
fi
if [ "$secret_path" ] ; then
  vault write "$secret_path" "key"=@"$file" 2>&1
  _error_code=$?
  if [ "$_error_code" -eq "0" ]; then
    echo "Uploading $file to $secret_path is successfully"
  else
    __MSG="Error while uploading $file to $secret_path"
    _message "$__MSG" "error" "$_error_code"
  fi
fi
