#!/usr/bin/env bash

# shellcheck source="$CLI_DIR/tc/framework/functions"
# shellcheck source="$CLI_DIR/tc/app/aws/functions"
# shellcheck disable=SC2124

source "$CLI_DIR/tc/framework/functions"

set +e

while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    --project)
    PROJECT="$2"
    shift 2
    ;;
    --env-tmp)
    ENV_TEMP="$2"
    shift 2
    ;;
    *)
    ;;
esac
done

function vault_get() {
  tcctl helpers check_bin_file vault
  tcctl vault token
  VAULT_SECRET=$1
  ENV_TEMP=$2
  __output=$( vault kv get "$VAULT_SECRET" 2>&1 )
  export _error_code=$?
  __MSG="Command: \033[36mtcctl vault get $@\033[39m\n"
  __MSG+="$__output"
  if [ $_error_code -eq "0" ]; then
    vault kv get "$VAULT_SECRET" | sed 's/\ \{1,\}/=/g' | sed 1,11d > "$ENV_TEMP"
  else
    _message "$__MSG" "error" "$_error_code"
  fi
}

vault_get "$PROJECT" "$ENV_TEMP"
