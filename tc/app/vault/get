#!/usr/bin/env bash

# shellcheck disable=SC2124,SC1090,SC1091

source "$CLI_DIR/tc/framework/functions"
source "$CLI_DIR/tc/app/vault/functions"
source "$CLI_DIR/tc/app/helpers/functions"

while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    --secret-path)
    SECRET_PATH="$2"
    shift 2
    ;;
    --env)
    ENV="$2"
    shift 2
    ;;
    *)
    ;;
esac
done

function _vault_get() {
  _check_bin_file vault
  VAULT_TOKEN=$(tcctl vault token)
  export VAULT_TOKEN
  __secret_path=$1
  __env=$2
  __output=$( vault kv get "$__secret_path" 2>&1 )
  _error_code=$?
  __MSG="Command: tcctl vault get $@ "
  __MSG+="$__output"
  if [ "$_error_code" -eq "0" ]; then
    vault kv get "$__secret_path" | sed 's/\ \{1,\}/=/g'| sed 's:=n/a$:=:' | sed 1,11d > "$__env"
  else
    _message "$__MSG" "error" "$_error_code"
  fi
}

if [ -z "$SECRET_PATH" ]; then
  __MSG="Command: tcctl vault get missed --secret-path"
  _message "$__MSG" "error" "$_error_code"
elif [ -z "$ENV" ]; then
  __MSG="Command: tcctl vault get missed --env"
  _message "$__MSG" "error" "$_error_code"
else
  _vault_get "$SECRET_PATH" "$ENV"
fi
