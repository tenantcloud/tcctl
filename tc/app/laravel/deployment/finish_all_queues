#!/usr/bin/env bash

# shellcheck disable=SC1090

source "$CLI_DIR/tc/framework/functions"

set +e

QUEUE="deploy"
PARALLEL_PROCESS="8"

while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    --parallel-process)
    PARALLEL_PROCESS="$2"
    shift 2
    ;;
    --queue )
    QUEUE="$2"
    shift 2
    ;;
    *)
    ;;
esac
done

list="${QUEUE//,/ }"

function _finish_all_queues() {
  __session_name="QUEUESFINISH"
  __parallel_process=$1
  if  [[ $(command -v byobu) ]]; then
    byobu -2 new-session -d -s $__session_name
    _error_code="$?"
    __MSG="Error when byobu runs"
    if [[ "$_error_code" -gt "0" ]]; then
      _message "$__MSG" "error" "$_error_code"
    fi
  else
    _message "$__MSG" "error" "$_error_code"
  fi
  for ((i=1;i<="$__parallel_process";i++)); do
    for item in $list; do
      byobu new-window -t $__session_name "php artisan queue:work --force --queue=$item"
      _error_code=$(( "$_error_code" + "$?" ))
      __MSG="Error when byobu run $item in new-window session"
      if [[ "$_error_code" -gt "0" ]]; then
        _message "$__MSG" "error" "$_error_code"
      fi
    done
  done
  php artisan tc:devops:queues_state --queue=deploy --terminate-when-empty=true
  _error_code=$(( "$_error_code" + "$?" ))
  __MSG="Error on queue state terminate when empty"
  if [[ "$_error_code" -gt "0" ]]; then
    _message "$__MSG" "error" "$_error_code"
  fi
  byobu kill-session -t "$__session_name"
  _error_code=$(( "$_error_code" + "$?" ))
  __MSG="Error while trying to kill byobu session"
  if [[ "$_error_code" -gt "0" ]]; then
    _message "$__MSG" "error" "$_error_code"
  fi
  __MSG="Command: tcctl laravel deployment finish_all_queues"
  if [ "$_error_code" -eq "0" ]; then
    _message "$__MSG"
  else
    _message "$__MSG" "error" "$_error_code"
  fi
}

if [ -z "$PARALLEL_PROCESS" ]; then
  __MSG="Command: tcctl laravel deployment finish_all_queues missed --parallel-process"
  _message "$__MSG" "error" "$_error_code"
elif [ -z "$QUEUE" ]; then
  __MSG="Command: tcctl laravel deployment finish_all_queues missed --queue"
  _message "$__MSG" "error" "$_error_code"
else
  _finish_all_queues "$PARALLEL_PROCESS"
fi
