#!/usr/bin/env bash

# shellcheck disable=SC1090,SC2155

__draw_line() {
  __count=$2
  __symbol_count=${__count:=80}
  for (( i=1; i <= __symbol_count; i++ )) ; do printf "%s" "$1"; done
  echo
}

__show_date_hostname() {
  echo "[$(date '+%Y-%m-%d %H:%M:%S')] on $(hostname)"
}

function _message {
  __message_body="$1"
  __message_type="${2:-info}"
  __message_error_code="${3:-0}"

  case "$__message_type" in
    error)
      echo "= ERROR ========================================================================"
    ;;
    warning)
      echo "= WARNING ======================================================================"
    ;;
    *)
      echo "= INFO ========================================================================="
    ;;
  esac

  __show_date_hostname
  __draw_line -

  [[ $__message_type != "info" ]] && echo "Exit code $__message_error_code"
  printf "%b\n" "$__message_body"

  __draw_line -

  [[ $__message_type == "error" ]] && exit "$__message_error_code"
}

function _get_project_path() {
  pwd
}

function _get_project_name() {
  __path="${PWD##*/}"
  echo "${__path//./-}"
}

function _get_os() {
  uname -s
}

function _vault_get_addr() {
  VAULT_CONFIG_FILE=~/.vault-configuration
  source $VAULT_CONFIG_FILE
  echo "$VAULT_ADDR"
}

export VAULT_ADDR=$(_vault_get_addr)
